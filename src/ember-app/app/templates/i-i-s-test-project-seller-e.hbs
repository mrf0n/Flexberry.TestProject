<h3 class="ui header">{{t "forms.i-i-s-test-project-seller-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field" data-test-i-i-s-test-project-seller-e-role="true">
    <label>{{t "forms.i-i-s-test-project-seller-e.role-caption"}}</label>
    {{flexberry-dropdown
      items=(flexberry-enum "i-i-s-test-project-t-role")
      value=model.role
      class=(if (v-get validationModel "role" "isInvalid") "error")
      readonly=readonly
    }}
    {{flexberry-validationmessage error=(v-get validationModel "role" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.фИО
      class=(if (v-get validationModel "фИО" "isInvalid") "error")
      label=(t "forms.i-i-s-test-project-seller-e.фИО-caption")
      data-test-i-i-s-test-project-seller-e-фИО=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "фИО" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-test-project-seller-e.shop-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.shop
      relationName="shop"
      projection="ShopL"
      title=(t "forms.i-i-s-test-project-seller-e.shop-caption")
      readonly=readonly
      componentName="shopLookup"
      class=(if (v-get validationModel "shop" "isInvalid") "error")
      data-test-i-i-s-test-project-seller-e-shop=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "shop" "message")}}
  </div>
</form>
